<UserControl x:Class="_6_ArduinoController.FootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_6_ArduinoController"
             mc:Ignorable="d" Height="259.832" Width="88.494">
    <Grid HorizontalAlignment="Left" Width="97" Height="249" VerticalAlignment="Top">
        <Canvas Height="248" VerticalAlignment="Top" Margin="0,0,22,0" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove">
            <Rectangle x:Name="SliderBox" Canvas.Left="10" Canvas.Top="10" Height="234" Width="47" StrokeThickness="2" Stroke="Yellow" MouseDown="Rectangle_MouseDown"></Rectangle>
            <Rectangle x:Name="SliderValue" Canvas.Left="12" Canvas.Top="12" Height="46" Width="43" StrokeThickness="1" Fill="Aqua" Stroke="Black"></Rectangle>

            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Gray" Offset="2"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Canvas.Effect>
        </Canvas>

    </Grid>
</UserControl>
