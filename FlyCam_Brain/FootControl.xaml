<UserControl x:Class="_6_ArduinoController.FootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_6_ArduinoController"
             mc:Ignorable="d" Height="264.725" Width="68.382">
    <Grid HorizontalAlignment="Left" Width="85" Margin="0,0,-17,-48">
        <Canvas Height="303" VerticalAlignment="Top" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" HorizontalAlignment="Left" Width="65">
            <Rectangle x:Name="SliderBox" Canvas.Left="10" Canvas.Top="8" Height="234" Width="47" StrokeThickness="2" Stroke="Yellow" MouseDown="Rectangle_MouseDown">
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
            <Rectangle x:Name="SliderValue" Canvas.Left="13" Canvas.Top="11" Height="42" Width="41" StrokeThickness="0" Fill="#FF01BAFF" Stroke="Black">
                <Rectangle.Effect>
                    <DropShadowEffect Direction="111" ShadowDepth="3" Color="#FF000676"/>
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="UIText_Description" Content="Slider One" Height="30" Canvas.Top="238" Width="76" Foreground="#FFDCFF00" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStretch="ExtraExpanded" FontWeight="Bold" Canvas.Left="-5"/>
            <Label x:Name="UIText_Status" Content="Status" Height="24" Canvas.Top="255" Width="65" Foreground="#FF0068FF" FontStretch="ExtraExpanded" FontWeight="Bold" FontSize="10" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="UIText_Status2" Content="0" Height="40" Canvas.Top="262" Width="76" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStretch="ExtraExpanded" FontWeight="Thin" Canvas.Left="-5" FontSize="22"/>

            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Gray" Offset="2"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Canvas.Effect>
        </Canvas>

    </Grid>
</UserControl>
